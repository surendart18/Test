Count Alphabets in a given string

#include<bits/stdc++.h>
using namespace std;
int main()
{
    string str;
    getline(cin,str);
    int count=0;
    for(char ch:str)
    {
        if((ch>='a' && ch<='z') || (ch>='A' && ch<='Z'))
        {
            count++;
        }
    }
    cout<<count;
    return 0;
}
